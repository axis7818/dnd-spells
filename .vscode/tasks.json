{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Convert Spells",
            "type": "shell",
            "command": "python",
            "args": [
                "main.py"
            ],
            "problemMatcher": []
        },
        {
            "label": "Clean Output",
            "type": "shell",
            "windows": {
                "command": "if (Test-Path output) { Remove-Item -Recurse -Force output }; Remove-Item -Force spells-*.zip -ErrorAction SilentlyContinue"
            },
            "linux": {
                "command": "rm -rf output; rm -f spells-*.zip"
            },
            "osx": {
                "command": "rm -rf output; rm -f spells-*.zip"
            },
            "problemMatcher": []
        },
        {
            "label": "Pytest",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "pytest"
            ],
            "group": "test",
            "problemMatcher": []
        }
    ]
}
