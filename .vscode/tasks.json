{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Convert Spells",
            "type": "shell",
            "command": "python",
            "args": [
                "convert_spells.py"
            ],
            "problemMatcher": []
        },
        {
            "label": "Clean Output",
            "type": "shell",
            "windows": {
                "command": "if (Test-Path spell-output) { Remove-Item -Recurse -Force spell-output }; Remove-Item -Force spell-output-*.zip -ErrorAction SilentlyContinue"
            },
            "linux": {
                "command": "rm -rf spell-output; rm -f spell-output-*.zip"
            },
            "osx": {
                "command": "rm -rf spell-output; rm -f spell-output-*.zip"
            },
            "problemMatcher": []
        },
        {
            "label": "Pytest",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "pytest"
            ],
            "group": "test",
            "problemMatcher": []
        }
    ]
}
